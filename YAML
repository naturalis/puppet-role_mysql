# Example YAML file to override parameters using hiera or the Foreman

# Install MySQL server using mysql::server: root_password
role_mysql::root_password: 'mypass'

# Install MySQL server using mysql::server: override_options
role_mysql::override_options:
  mysqld:
    bind-address: '0.0.0.0'
    max_allowed_packet: '512M'

# Install MySQL server using mysql::server: users
role_mysql::users:
  'geneious@localhost':
    ensure: 'present'
    password_hash: '*6C8989366EAF75BB670AD8EA7A7FC1176A95CEF4'
    password: 'password'
  'geneious@%':
    ensure: 'present'
    password_hash: '*6C8989366EAF75BB670AD8EA7A7FC1176A95CEF4'

# Install MySQL server using mysql::server: grants
role_mysql::grants:
  'geneious@localhost/geneious.*':
    privileges:
      - ALL
    table: 'geneious.*'
    user: 'geneious@localhost'
  'geneious@%/geneious.*':
    privileges:
      - ALL
    table: 'geneious.*'
    user: 'geneious@%'

# Create databases using mysql::db with initial user
role_mysql::db_hash:
  geneious:
    user: 'manager'
    password: 'mypass'
    host: 'localhost'
    grant:
      - SELECT
